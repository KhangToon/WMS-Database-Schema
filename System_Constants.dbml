// ============================================
// SYSTEM CONSTANTS & ENUMS
// ============================================
// Bảng chứa các giá trị Type/Status chuẩn hóa cho toàn hệ thống
// Giúp tránh việc hardcode string trong code và dbml
// ============================================

Table Sys_ASN_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Description nvarchar(200)
  
  Note: '''
    Các loại ASN được hỗ trợ
    - PO: Đơn hàng mua
    - RTR: Return to Repository (Khách trả hàng về kho)
    - SRR: Supplier Return Request (Đổi trả NCC)
    - ODR: Outbound Delivery Request (Nhập chuyển kho)
  '''
}

Table Sys_ASN_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Trạng thái của ASN
    - NEW: Mới tạo
    - PROCESSING: Đang nhập hàng (GR created)
    - COMPLETED: Đã nhập đủ 100%
    - CLOSED: Đóng thủ công
    - CANCELED: Hủy bỏ
  '''
}

Table Sys_GR_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Phân loại Phiếu nhập kho (GR)
    - PO: Nhập mua hàng
    - RTR: Nhập hàng trả lại
    - TRANSFER: Nhập chuyển kho
    - OTHERS: Nhập khác
  '''
}

Table Sys_GR_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Trạng thái của GR
    - DRAFT: Nháp
    - SUBMITTED: Chờ xử lý QC
    - PROCESSING: Đang xử lý QC
    - COMPLETED: Hoàn thành
    - CANCELED: Hủy
  '''
}

Table Sys_Stock_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Is_Block bit [default: 0, note: 'Có bị khóa không? (Block inventory)']
  
  Note: '''
    Tình trạng hàng hóa (Inventory Condition)
    - NEW: Hàng mới
    - AVAILABLE: Khả dụng
    - HOLD: Giữ chỗ/Chờ xử lý
    - QC_PENDING: Chờ kiểm tra
    - DAMAGED: Hàng lỗi
    - REJECT: Hàng trả về
  '''
}

Table Sys_Inventory_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Phân loại Tồn kho (Business Type)
    - NORMAL: Tồn kho thường
    - CONSIGNMENT: Hàng ký gửi
    - BONDED: Kho ngoại quan
    - TRANSIT: Hàng đang đi đường
  '''
}

Table Sys_Transaction_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Action nvarchar(10) [note: 'Increase (+), Decrease (-), Move (=)']
  
  Note: '''
    Loại giao dịch kho (Transaction)
    - GR_RECEIVE: Nhập hàng tạm (Receiving)
    - PUTAWAY: Cất hàng lên kệ
    - PICK: Lấy hàng
    - PACK: Đóng gói
    - SHIP: Xuất kho
    - ADJUST: Kiểm kê điều chỉnh
    - GR_RETURN: Trả hàng ngay khi nhập
  '''
}

Table Sys_Zone_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Loại kho chức năng (Functional Area Type)
    - INTERNAL: Kho nội bộ
    - SCRAP: Kho phế liệu
    - RETURN: Kho hàng trả về
    - QC: Kho kiểm soát chất lượng
    - STAGING: Kho chờ xuất/nhập
  '''
}

// ============================================
// LOCATION Module Constants
// ============================================

Table Sys_Area_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Loại khu vực (Area Type)
    - STORAGE: Khu vực lưu trữ
    - INBOUND_STAGING: Khu vực chờ nhập
    - OUTBOUND_STAGING: Khu vực chờ xuất
    - PACKING: Khu vực đóng gói
    - RETURN: Khu vực hàng trả
  '''
}

Table Sys_Aisle_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Loại dãy/kệ (Aisle Type)
    - RACK: Kệ chứa hàng (nhiều tầng)
    - FLOOR: Sàn (1 tầng)
  '''
}

Table Sys_Bin_Storage_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Loại lưu kho của Bin (Bin Storage Type)
    - GOOD: Hàng tốt (Hàng mới, Đã sử dụng)
    - QC: Kiểm soát chất lượng (Chờ kiểm nhập, Chờ đánh giá)
    - PENDING: Chờ xử lý (Chờ sửa chữa, thanh lý, thu hồi, trả NCC)
    - DAMAGED: Hàng hỏng
  '''
}

Table Sys_Bin_Condition {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Tình trạng chi tiết của Bin/Hàng (Bin Condition)
    - NEW: Hàng mới
    - USED: Đã sử dụng
    - QC_PENDING: Chờ kiểm nhập
    - QC_EVALUATING: Chờ đánh giá
    - REPAIR_PENDING: Chờ sửa chữa
    - DISPOSAL_PENDING: Chờ thanh lý
    - RECALL_PENDING: Chờ thu hồi
    - RETURN_PENDING: Chờ trả NCC
  '''
}

// ============================================
// OUTBOUND Module Constants
// ============================================

Table Sys_ODR_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Loại Yêu cầu xuất kho (ODR Source Type)
    - ISR: Inventory Stock Request (Đề nghị lãnh kho nội bộ)
    - RCR: Return Confirmation Request (Trả hàng NCC)
    - DLR: Delivery Request (Xuất bán hàng)
    - MANUAL: Tạo thủ công
    - TRANSFER: Chuyển kho
  '''
}

Table Sys_ODR_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Trạng thái Yêu cầu xuất kho (ODR)
    - NEW: Mới tạo/Draft
    - PENDING_ALLOCATION: Chờ phân bổ (Đã gởi duyệt)
    - ALLOCATED: Đã phân bổ tồn kho (Chờ tạo phiếu xuất)
    - PROCESSING: Đang xử lý (Đã tạo GI, đang soạn/xuất)
    - COMPLETED: Hoàn thành (Đã xuất hết)
    - CANCELED: Hủy bỏ
  '''
}

Table Sys_GI_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  
  Note: '''
    Trạng thái Phiếu xuất kho (Goods Issue)
    - DRAFT: Nháp (Chờ xử lý)
    - PICKING: Đang soạn hàng (Waiting for Picking)
    - PICKED: Đã soạn xong (Chờ xác nhận xuất)
    - COMPLETED: Hoàn thành (Đã xác nhận xuất kho)
    - CANCELED: Hủy
  '''
}

// ============================================
// ITEM Module Constants
// ============================================

Table Sys_Item_Group_Type {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Phân loại nhóm hàng (Classification)
    - CONSUMABLE: Hàng tiêu hao
    - NON_CONSUMABLE: Hàng không tiêu hao
  '''
}

Table Sys_Item_Form {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Trạng thái vật lý (Form)
    - SOLID: Rắn
    - LIQUID: Lỏng
    - GAS: Khí
  '''
}

Table Sys_Item_Status {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: '''
    Trạng thái Item
    - DRAFT: Nháp
    - ACTIVE: Đang hoạt động
    - INACTIVE: Ngừng hoạt động
  '''
}

Table Sys_UOM {
  Id int [pk, increment]
  Code nvarchar(50) [not null, unique]
  Name nvarchar(100)
  Note: 'Danh mục Đơn vị tính (Unit of Measure)'
}

